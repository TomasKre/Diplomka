<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aplikace vypracována v rámci dimplomové práce Automatizace dopravního
průzkumu na Technické univerzitě v Liberci. Aplikace pořizuje zvukový záznam, ale pouze za účely
zachycení úrovně hlasitosti a vždy pouze vteřinu během zaznamenávání GPS polohy. Tento záznam je
pouze ve vyrovnávací paměti (bufferu) a není nikde ukládán a ani nikam sdílen. Předem děkuji za
případné zapojení do sběru dat a testování aplikace."
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© Tomáš Krechler 2022-2023"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>